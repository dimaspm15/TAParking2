<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard"
    android:background="@color/white">


    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/custom2"
        android:id="@+id/lyd1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_marginLeft="10dp"
            android:id="@+id/d_logo"
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d_logo"
            android:text="Hi,Dimas Putra"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/d_txt1"
            android:textColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where are you going today?"
                android:layout_below="@id/d_txt1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/white"

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notif"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="40dp"
            android:id="@+id/d_g1">

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/custom3"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="30dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rl_d1">
                    
                </RelativeLayout>
                
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/dompet"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/d_dompet"
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/d_dompet"
                    android:text="Rp.150.000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/d_txt2"
                    
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/topup"
                    android:layout_toRightOf="@id/d_txt2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/topup"
                    android:layout_toRightOf="@id/d_txt2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/d_topup"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/pay"
                    android:layout_toRightOf="@+id/d_topup"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/d_pay"/>
                
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Top Up"
                    android:layout_toRightOf="@id/d_txt2"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="65dp"
                    android:id="@+id/d_txt3"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Pay"
                    android:layout_toRightOf="@id/d_txt3"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/location"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="270dp"
        android:id="@+id/d_location"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/d_location"
        android:src="@drawable/booking"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="270dp"
        android:id="@+id/d_booking"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/d_booking"
        android:src="@drawable/history"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="270dp"
        android:id="@+id/d_history"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Location"
        android:layout_below="@id/d_location"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:id="@+id/txt_location"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Booking"
        android:layout_below="@id/d_booking"
        android:layout_marginLeft="173dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:id="@+id/txt_booking"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="History"
        android:layout_below="@id/d_history"
        android:layout_marginLeft="266dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:id="@+id/txt_history"/>














</RelativeLayout>