<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newpassword"
    android:background="@color/white">

    <ImageView
        android:layout_width="257dp"
        android:layout_height="271dp"
        android:src="@drawable/newpass"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/np_img_1"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:text="Enter New Password"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/SemiBold"
        android:layout_below="@id/np_img_1"
        android:id="@+id/np_txt_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Set Complex passwords to protect"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/MediumItalic"
        android:textColor="@color/abu"
        android:layout_centerInParent="true"
        android:layout_below="@id/np_txt_1"
        android:id="@+id/np_txt_2"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:text="New Password"
        android:layout_below="@id/np_txt_2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/SemiBold"
        android:textSize="12sp"
        android:id="@+id/np_txt_3"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:background="@drawable/custom5"
        android:layout_below="@id/np_txt_3"
        android:layout_marginLeft="15dp"
        android:hint="Enter Your New Password"
        android:fontFamily="@font/Poppins"
        android:paddingLeft="40dp"
        android:id="@+id/np_et_1"/>
    <ImageView
        android:layout_width="13dp"
        android:layout_height="17dp"
        android:src="@drawable/gembok"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/np_img_2"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/eye"
        android:layout_toRightOf="@id/np_img_2"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="330dp"
        android:id="@+id/np_img_3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Re-enter Your New Password"
        android:layout_below="@id/np_et_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/SemiBold"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:background="@drawable/custom5"
        android:layout_below="@id/np_et_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:hint="Confirm Your New Password"
        android:fontFamily="@font/Poppins"
        android:paddingLeft="40dp"
        android:id="@+id/np_et_2"/>
    <ImageView
        android:layout_width="13dp"
        android:layout_height="17dp"
        android:src="@drawable/gembok"
        android:layout_marginTop="495dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/np_img_4"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/eye"
        android:layout_toRightOf="@id/np_img_2"
        android:layout_marginTop="495dp"
        android:layout_marginLeft="330dp"
        android:id="@+id/np_img_5"/>
    <ImageView
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:src="@drawable/custom2"
        android:layout_below="@id/np_et_2"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/np_img_6"
        />
    <TextView
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:text="Set New Password"
        android:layout_marginTop="598dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/SemiBold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/np_txt_5"
        />



</RelativeLayout>