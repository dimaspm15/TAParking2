<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetpassword"
    android:background="@color/white">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/rs"
        android:layout_centerHorizontal="true"
        android:id="@+id/rp_img_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Reset Your Password"
        android:layout_below="@id/rp_img_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/SemiBold"
        android:id="@+id/rp_txt_1"/>
    <TextView
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:text="Enter your email adress below
and weâ€™ll send you a link with instructions"
        android:textAlignment="center"
        android:layout_below="@id/rp_txt_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/abu"
        android:fontFamily="@font/Italic"
        android:id="@+id/rp_txt_2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Email"
        android:layout_below="@id/rp_txt_2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/SemiBold"
        android:textColor="@color/black"
        android:id="@+id/rp_txt_3"/>
    <EditText
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="Enter Your Email"
        android:background="@drawable/custom5"
        android:layout_below="@id/rp_txt_3"
        android:layout_marginLeft="15dp"
        android:paddingLeft="30dp"
        android:fontFamily="@font/Poppins"
        android:textSize="15sp"
        android:id="@+id/rp_et_1"/>
    <ImageView
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:src="@drawable/surat"
        android:layout_marginTop="436dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:src="@drawable/custom2"
        android:layout_below="@id/rp_et_1"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/rp_img_2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Send Verification Code"
        android:layout_marginTop="537dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/SemiBold"
        android:textAlignment="center"
        android:id="@+id/rp_txt_4"/>


</RelativeLayout>